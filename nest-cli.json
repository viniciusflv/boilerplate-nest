{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin",
        "options": {
          "introspectComments": true,
          "classValidatorShim": true
        }
      },
      {
        "name": "@nestjs/graphql",
        "options": { "introspectComments": true }
      }
    ]
  }
}
